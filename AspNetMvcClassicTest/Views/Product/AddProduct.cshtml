@model Entities.Concrete.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Ekle</h2>
<br />

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ProductName)
        <br /><br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc,
         new { @class = "form-control" })
        <br /><br />
        @Html.Label("Fiyat")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Price)
        <br /><br />
        @Html.Label("Ürün Resim Yolu")
        @Html.TextBoxFor(x => x.ImagePath, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ImagePath)
        <br /><br />
        @Html.Label("Oluşturulma Zamanı")
        @Html.TextBoxFor(x => x.CreateDate, new { @class = "form-control", type = "date" })
        <br /><br />
        @Html.Label("Oluşturan Kişi Id")
        @Html.TextBoxFor(x => x.CreateUserId, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}
