@model Entities.Concrete.User
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Güncelleme</h2>
<br />
@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kullanıcı Id")
        @Html.TextBoxFor(x => x.UserId, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Adınız")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br /><br />
        @Html.Label("Soyadınız")
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Surname)
        <br /><br />
        @Html.Label("Kullanıcı Adınız")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserName)
        <br /><br />
        @Html.Label("Password")
        @Html.TextBoxFor(x => x.Saltpassword, Model.Saltpassword = "" ,new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Saltpassword)
        <br /><br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}

