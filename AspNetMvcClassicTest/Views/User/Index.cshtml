@using Entities.Concrete
@model List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcılar</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Kullanıcı Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.UserName</td>
            <td><a href="/User/EditUser/@item.UserId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/User/DeleteUser/@item.UserId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/User/AddUser" class="btn btn-info">Yeni Kullanıcı</a>

